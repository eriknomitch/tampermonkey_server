#= require utility
#= require_self
#= require uber_monkey

@GM =
  env: "<%= Rails.env %>"
  remote:
    suffix: "/assets"

switch GM.env
  when "development"
    GM.domain = "development.tampermonkey-server.com:3000"
    GM.remote.protocol = "http"
  when "production"
    GM.domain = "tampermonkey-server.herokuapp.com"
    GM.remote.protocol = "https"

