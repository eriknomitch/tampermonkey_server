#= require_self
#= require uber_monkey

@GM =
  env: "<%= Rails.env %>"
  remote:
    suffix: "/assets"

GM.domain = switch
  when "development"
    "development.tampermonkey-server.com:3000"
  when "production"
    "tampermonkey-server.herokuapp.com"

GM.remote.protocol = switch
  when "production" then "https"
  else "http"

